@page
@model BreakfastBuffet.Pages.CheckInModel
@{
}

<div>
  <h1>Welcome to the Check In</h1> <br/>
  <p>
    Here you can check in the guests that have arrived for breakfast <br/>
    On any given date
  </p>
  <form id="Checkin-Form" method="post">
    <div>
      <label> Adults </label>
      <input asp-for="Input.CheckedInAdult" type="number" />
    </div>
   <div>
      <label> Children </label>
      <input asp-for="Input.CheckedInChildren" type="number" />
    </div>
   <div>
      <label> Room Number </label>
      <input asp-for="Input.RoomNumber" type="number"/>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
